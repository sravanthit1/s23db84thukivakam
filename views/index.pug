extends layout

block content
  h1= title
  p Welcome to the Page of Sravanthi!
  p I am a student at NWMSU!
  button(type="button", class="btn btn-secondary",onclick = "doReduce()") Press Me
  div#reduce Reduce the value
   script
      let count = 20;
      let change = -1;
      function doReduce() {
        count += change;
        change -= 1;
        document.querySelector('#reduce').textContent = `Count ${count} with change ${change}.`;
      }
