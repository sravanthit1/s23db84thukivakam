block content 
  h1= title 
 
  form(id='dogsForm', action="/resource/dogs", method="POST") 
    div.form-group 
        label.dogsAttr(for='dogName') dogs Name
        input#name(type='text', name='dogName') 
    div.form-group 
        label.dogsAttr(for='DogPrice') Dog Price 
        input#price(type='number', name='DogPrice') 
    div.form-group 
        label.dogsAttr(for='dogAge') Dog Age 
        input#age(type='text', name='dogAge') 
    input(class="btn btn-info",type="submit") 
 
  script. 
